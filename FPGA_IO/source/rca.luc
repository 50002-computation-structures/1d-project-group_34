module rca (
    input a[16],
    input b[16],
    input ci,
    output s[16]
  ) {

  fa fa[16];
  var i;
  
  always {
    //set the inputs to the first unit LSB of the rca
    fa.a[0] = a[0];
    fa.b[0] = b[0];
    fa.ci[0] = ci;
    
    for (i=1; i<16; i++) {//define the connectoions for the other 31 units of fa
      fa.a[i] = a[i];
      fa.b[i] = b[i];
      fa.ci[i] = fa.co[i-1];
    }
    s = fa.s; //assign the output bits
  }
}
